{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "🛠️ Debug Server",
      "program": "${workspaceFolder}/server/index.js",
      "runtimeExecutable": "nodemon",       // רק אם את משתמשת ב-nodemon
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "🌐 Debug Chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
